<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:local="using:CoolapkLite.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="HamburgerMenu.ThemeResources.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="local:HamburgerMenu">
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Foreground" Value="{ThemeResource HamburgerMenuItemForeground}" />
        <Setter Property="HamburgerWidth" Value="{StaticResource PaneToggleButtonWidth}" />
        <Setter Property="HamburgerHeight" Value="{StaticResource PaneToggleButtonHeight}" />
        <Setter Property="HamburgerMenuTemplate" Value="{StaticResource PaneToggleButtonTemplate}" />
        <Setter Property="PaneBackground" Value="{ThemeResource HamburgerMenuExpandedPaneBackground}" />
        <Setter Property="PaneOverlayBackground" Value="{ThemeResource HamburgerMenuDefaultPaneBackground}" />
        <Setter Property="Template" Value="{StaticResource HamburgerMenuTemplate}" />
    </Style>
</ResourceDictionary>
