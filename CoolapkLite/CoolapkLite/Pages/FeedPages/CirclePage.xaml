<Page
    x:Class="CoolapkLite.Pages.FeedPages.CirclePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="using:CoolapkLite.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CoolapkLite.Pages.FeedPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    NavigationCacheMode="Required"
    mc:Ignorable="d">
    <Page.Resources>
        <Style TargetType="PivotItem">
            <Setter Property="Margin" Value="0" />
        </Style>
        <Style TargetType="PivotHeaderItem">
            <Setter Property="FontSize" Value="{StaticResource ControlContentThemeFontSize}" />
        </Style>
    </Page.Resources>
    <Grid>
        <Pivot
            x:Name="Pivot"
            Margin="{x:Bind PivotTitleMargin}"
            Loaded="Pivot_Loaded"
            SelectionChanged="Pivot_SelectionChanged"
            SizeChanged="Pivot_SizeChanged">
            <Pivot.LeftHeader>
                <Border x:Name="Block" Height="48" />
            </Pivot.LeftHeader>
            <Pivot.RightHeader>
                <Button
                    x:Name="RefreshButton"
                    VerticalAlignment="Center"
                    Style="{StaticResource IconButtonStyle}">
                    <SymbolIcon Symbol="Refresh" />
                </Button>
            </Pivot.RightHeader>
        </Pivot>
    </Grid>
</Page>
