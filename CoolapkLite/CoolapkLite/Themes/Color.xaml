<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:media="using:CoolapkLite.Media">
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Dark">
            <Color x:Key="SolidBackgroundFillColorBase">#FF202020</Color>
        </ResourceDictionary>
        <ResourceDictionary x:Key="HighContrast">
            <Color x:Key="SolidBackgroundFillColorBase">#FF000000</Color>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Light">
            <Color x:Key="SolidBackgroundFillColorBase">#FFF3F3F3</Color>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
    <AcrylicBrush
        x:Key="ApplicationPageBackgroundThemeAcrylicWindowBrush"
        BackgroundSource="HostBackdrop"
        FallbackColor="{ThemeResource SolidBackgroundFillColorBase}"
        TintColor="{ThemeResource SolidBackgroundFillColorBase}"
        TintOpacity="1" />
    <media:BackdropBlurBrush
        x:Key="ApplicationPageBackgroundThemeBlurWindowBrush"
        BackgroundSource="HostBackdrop"
        FallbackColor="{ThemeResource SolidBackgroundFillColorBase}"
        TintColor="{ThemeResource SolidBackgroundFillColorBase}"
        Amount="10"
        TintOpacity="0.9" />
    <AcrylicBrush
        x:Key="ApplicationPageBackgroundThemeAcrylicElementBrush"
        BackgroundSource="Backdrop"
        FallbackColor="{ThemeResource SolidBackgroundFillColorBase}"
        TintColor="{ThemeResource SolidBackgroundFillColorBase}"
        TintOpacity="0.9" />
    <media:BackdropBlurBrush
        x:Key="ApplicationPageBackgroundThemeBlurElementBrush"
        BackgroundSource="Backdrop"
        FallbackColor="{ThemeResource SolidBackgroundFillColorBase}"
        TintColor="{ThemeResource SolidBackgroundFillColorBase}"
        Amount="10"
        TintOpacity="0.91" />
</ResourceDictionary>
