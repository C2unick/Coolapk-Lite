<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:media="using:CoolapkLite.Media">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///Themes/Color.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    <media:BackdropBlurBrush
        x:Key="ApplicationPageBackgroundThemeBlurWindowBrush"
        BackgroundSource="HostBackdrop"
        FallbackColor="{ThemeResource SolidBackgroundFillColorBase}"
        TintColor="{ThemeResource SolidBackgroundFillColorBase}"
        Amount="10"
        TintOpacity="0.9" />
    <media:BackdropBlurBrush
        x:Key="ApplicationPageBackgroundThemeBlurElementBrush"
        BackgroundSource="Backdrop"
        FallbackColor="{ThemeResource SolidBackgroundFillColorBase}"
        TintColor="{ThemeResource SolidBackgroundFillColorBase}"
        Amount="10"
        TintOpacity="0.91" />
</ResourceDictionary>
